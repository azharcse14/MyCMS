<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".category">


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/choose_category_of_complaint"
        android:textColor="#000"
        android:textSize="30sp" />


    <Button
        android:id="@+id/privates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="16dp"
        android:text="@string/private_e"
        android:textStyle="bold" />

    <Button
        android:id="@+id/social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privates"
        android:layout_marginTop="16dp"
        android:text="@string/social"
        android:textStyle="bold" />

    <Button
        android:id="@+id/national"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/social"
        android:layout_marginTop="16dp"
        android:text="@string/national"
        android:textStyle="bold" />

    <Button
        android:id="@+id/international"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/national"
        android:layout_marginTop="16dp"
        android:text="@string/international"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/international"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:text=" "
        android:textColor="#000"
        android:textSize="30sp" />

</RelativeLayout>
